extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
  .container.my-3

    include ../../partials/list-user.pug

    .row
      .col-12 
        +box-head('Danh sách bạn bè')

    .row(data-users-friend)
      each user in users 
        .col-6(user-id=user.id)
          div(class='box-user')
            div(class='inner-avatar')
              img(
                src=(user.avatar ? user.avatar : '/images/free-user-icon-3296-thumb.png')
                alt=user.fullName
              )
            div(class='inner-info')
              div(class='inner-name') #{user.fullName}
              div(class='inner-buttons')
                a(
                  href=`/chat/${user.chatRoomId}`
                  class='btn btn-sm btn-primary mr-1'
                ) Nhắn tin
            div(
              class='inner-status'
              status=user.onlineStatus
            ) <i class='fa-solid fa-circle'></i>
          
  block script 
    script(type='module' src="/js/users.js") 
