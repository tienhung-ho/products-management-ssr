extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
  .container.my-3

    include ../../partials/list-user.pug

    .row
      .col-12 
        +box-head('Friend request')

    .row(data-users-accept=user.id)
      each user in users
        .col-6(user-id=user.id)
          div(class='box-user')
            div(class='inner-avatar')
              img(
                src=(user.avatar ? user.avatar : "/images/free-user-icon-3296-thumb.png")
                alt=user.fullName
              )
            div(class='inner-info')
              div(class='inner-name') #{user.fullName}
              div(class='inner-buttons')
                button(
                  class='btn btn-sm btn-primary me-1'
                  btn-accept-friend=user.id
                ) Chấp nhận
                button(
                  class='btn btn-sm btn-secondary me-1'
                  btn-refuse-friend=user.id
                ) Từ chối
                button(
                  class='btn btn-sm btn-secondary me-1'
                  btn-deleted-friend
                  disabled
                ) Đã từ chối
                button(
                  class='btn btn-sm btn-secondary me-1'
                  btn-accepted-friend
                  disabled
                ) Đã chấp nhận

  block script 
    script(type='module' src="/js/users.js") 
