extend ../../layouts/default.pug 
include ../../mixins/alert.pug

block main 
    +alert-error(3000)
    form(
        action=`/${prefixAdmin}/product/create`
        method="POST"
        enctype="multipart/form-data"
    )
        .mb-3 
            label(
                for="title"
                class="form-label"
            ) Tiêu đề
            input(
                type="text"
                id="title"
                name="title"
                class="form-control"
            )
        .mb-3 
            label(
                for="desc"
                class="form-label"
            ) Mô tả
            textarea(
                id="desc"
                name="description"
                class="form-control"
                rows="5"
            )
        .mb-3 
            label(
                for="price"
                class="form-label"
            ) Giá
            input(
                type="number"
                id="price"
                name="price"
                class="form-control"
                value="0"
                min="0"
            )
        .mb-3 
            label(
                for="discount"
                class="form-label"
            ) % giảm giá
            input(
                type="number"
                id="discount"
                name="discountPercentage"
                class="form-control"
                value="0"
                min="0"
            ) 
        .mb-3 
            label(
                for="stock"
                class="form-label"
            ) Số lượng
            input(
                type="number"
                id="stock"
                name="stock"
                class="form-control"
                value="0"
                min="0"
            ) 
        div(
            class="mb-3"
            upload-image
        )
            label(
                for="thumb"
                class="form-label"
            ) Ảnh
            input(
                type="file"
                id="thumb"
                name="thumbnail"
                class="form-control"
                accept="image/*"
                input-image
            )
            img(
                preview-image
            )
        .mb-3 
            label(
                for="pos"
                class="form-label"
            ) Vị trí
            input(
                type="number"
                id="pos"
                name="position"
                class="form-control"
                placeholder="Tự động tăng"
                min="1"
            )
        .mb-3.form-check.form-check-inline
            input(
                type="radio"
                class="form-check-input"
                id="active"
                name="status"
                value="active"
                checked
            ) 
            label(
                for="active"
                class="form-check-label"
            ) Hoạt động
        .mb-3.form-check.form-check-inline
            input(
                type="radio"
                class="form-check-input"
                id="inactive"
                name="status"
                value="inactive"
            )
            label(
                for="inactive"
                class="form-check-label"
            ) Dừng hoạt động
        .mb-3
            button(
                class="btn btn-primary"
                type="submit"
            ) Tạo mới
            

