mixin alert-success(time)
    if(messages.changeSuccess)
        div(
            class="alert alert-success"
            show-alert 
            data-time=time
        ) 
            span #{messages.changeSuccess} 
            span(
                close-alert
            ) x

mixin alert-error(time)
    if(messages.changeError)
        div(
            class="alert alert-danger"
            show-alert 
            data-time=time
        ) 
            span #{messages.changeError} 
            span(
                close-alert
            ) x
